<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<BorderPane   xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cuphead.View.loginMenu"
            prefHeight="700" prefWidth="1200" stylesheets="@loginMenuStyle.css">

<center>
    <VBox spacing="15" alignment="CENTER" maxWidth="300" >
        <Text id="title" text="CUPHEAD GAME"/>
        <Label text = "username"/>
        <TextField fx:id="username" promptText="enter your username"/>
        <Label  text = "password"/>
        <TextField  fx:id="password" promptText="enter your password" onKeyTyped="#typePassword"/>
        <Button fx:id="registerButton" onMouseClicked="#registerProgress"  styleClass ="registerButton" text="Register"/>
        <Button fx:id="login" onMouseClicked="#loginProgress" styleClass="loginButton" text = "Login"/>
        <Button styleClass ="skipButton" text="Skip" onMouseClicked="#skip"/>

    </VBox>
</center>
</BorderPane>

